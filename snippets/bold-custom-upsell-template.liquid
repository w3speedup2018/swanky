            <div class="bold-product__above_content_button_container">
                <div class="bold-product__actions bold-product-options__actions">
                    <a href="/products/{{ product.handle }}" class="action_button personalize-product {{ product.tags }}">{{language_settings.customize_options_text}}</a>
                </div>
                
