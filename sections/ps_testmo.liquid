{% schema %}
  {
    "name": "Ps Testimonials",
    "settings": [
         {
          "type": "checkbox",
          "id": "darken",
          "label": "background color",
          "default": true 
        },
        {
          "type": "color",
          "id": "c1",
          "label": "background color pick"
        }
    ],
    "blocks":[{
      "type": "image",
      "name": "Image",
      "settings": [
             {
          "type": "checkbox",
          "id": "darken_bg",
          "label": "image or text",
          "default": true
        },
                {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "1600 x 1000px recommended"
        },              
	      {
          "type": "richtext",
          "id": "testimonial",
          "label": "Testimonial",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam quam enim, fringilla ut purus ut, pretium ullamcorper sem. In sit amet vestibulum tellus. Aenean gravida dolor eget mi bibendum semper. </p>"
        }
             ]
      }],
    "presets": [
    {
      "name": "Ps Testimonials",
      "category": "rivi"
    }
  ]
  }
{% endschema %}
