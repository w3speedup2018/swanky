  {
    "name": "Subscription Step Two",
     "max_blocks":4,
    "settings": [
	{
      "type": "text",
      "id": "txt1",
      "label":"Text"
	},
	{
      "type": "text",
      "id": "txt2",
      "label":"Text"
	},
	{
      "type": "text",
      "id": "txt3",
      "label":"Text"
	},
	{
      "type": "text",
      "id": "txt4",
      "label":"Text"
	},
	{
      "type": "text",
      "id": "heading",
      "label":"Heading"
	},
	{
      "type": "text",
      "id": "content",
      "label":"Content"
	},
	{
      "type": "text",
      "id": "ship",
