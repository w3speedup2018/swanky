{{ 'swatches-v1.scss.css' | asset_url | stylesheet_tag }}
{% if section.settings.show_payment_button %}
{% assign show_payment_button = true %}
{% elsif show_payment_button_quickshop %}
{% assign show_payment_button = true %}
{% else %}
{% assign show_payment_button = false %}
{% endif %}

{% assign variant = product.selected_or_first_available_variant %}
{% assign ps_check_tag = 'no' %}

{% for tag in product.tags %}
{% if tag contains 't_decanter' or tag contains 't_cigar_boxes' or tag contains 't_leather_wallet' or tag contains 't_valentine' or tag contains 't_glasses' or tag contains 't_phone_cases' or tag contains 't_hip_flask' or tag contains 't_classical_watches' or tag contains 't_wooden_watches' or tag contains 't_pocket_watches' or tag contains 't_glass_flask' or tag contains 't_leather_wallet_spain' or tag contains 't_leather_journal' %}
{% assign ps_check_tag = 'yes' %}
{% break %}
{% endif %}
{% endfor %}
 
<div class="clearfix product_form init smart-payment-button--{{ show_payment_button }} {% if product.variants.size > 1 or product.options.size > 1 %}product_form_options{% endif %} product_form--{{ settings.product_form_style }}"
     id="product-form-{{ product.id }}"
     data-product-form
     data-money-format="{{ shop.money_format }}"
     data-shop-currency="{{ shop.currency }}"
     data-select-id="product-select-{{ product.id }}{{ product-form }}{{ section.id }}{{ block.id }}"
     data-enable-state="{% if template contains 'product' %}true{% else %}false{% endif %}"
     data-product="{{ product | json | escape }}"
     {% if settings.limit_quantity or settings.display_inventory_left %}
     data-variant-inventory='[{%- for v in product.variants -%}{"id":{{v.id}},"inventory_quantity":{{v.inventory_quantity}},"inventory_management":"{{v.inventory_management}}","inventory_policy":"{{v.inventory_policy}}"}{% if forloop.last == false %},{% endif %}{%- endfor -%}]'
     {% endif %}
     data-product-id="{{ product.id }}"
     >

  {% form 'product', product, data-productid: product.id %}
  
  

{%comment%}
 
  <span itemprop="price" content="{{ variant.price | money_without_currency | remove: "," }}" class="hidden {% if variant.compare_at_price > variant.price %}sale{% endif %}">
    <span class="current_price {% if product.available == false %}hidden{% endif %}">
      {% if variant.price > 0 %}
      <span class="money">{{ variant.price | money }}</span>
      {% else %}
      {{ settings.free_price_text }}
      {% endif %}
    </span>
  </span>
  
  {%endcomment%}
  
 
{% if product.available and product.variants.size > 1 %}
  {% for option in product.options %}
    {% include 'custom-swatch' with option %}
  {% endfor %}
{% endif %}
  
  
  
  
  {% if product.options.size > 1 %}
  <div class="select hide hidden" hide hidden>
    <select id="product-select-{{ product.id }}{{ product-form }}{{ section.id }}{{ block.id }}" name="id" data-productid="{{ product.id }}" class="multi_select">
      {% for v in product.variants %}
      <option {% if v == variant %}selected="selected"{% endif %} value="{{ v.id }}" data-variant-title="{{ v.title }}" data-variant-price="{{ v.price | money }}" data-sku="{{ v.sku }}">{{ v.title }}</option>
      {% endfor %}
    </select>
  </div>
  
   
  {% elsif product.options.size == 1 and product.variants.size > 1 or product.options.size == 1 and product.options[0] != "Title" %}
  <div class="select hide hidden" hide hidden>
    <label>{{ product.options[0] }}</label>
    <select id="product-select-{{ product.id }}{{ product-form }}{{ section.id }}{{ block.id }}" name="id" data-productid="{{ product.id }}">
      {% for v in product.variants %}
      <option {% if v == variant %}selected="selected"{% endif %} value="{{ v.id }}" data-variant-title="{{ v.title }}" data-variant-price="{{ v.price | money }}" data-sku="{{ v.sku }}">{{ v.title }}</option>
      {% endfor %}
    </select>
  </div>
  {% else %}
  <input type="hidden" name="id" data-productid="{{ product.id }}" value="{{ variant.id }}" />
  {% endif %}
  
    {% if section.settings.display_product_quantity == true %}
    <div class="purchase-details__quantity product-quantity-box">
      <label for="quantity">{{ 'products.product.quantity' | t }}</label>
      <span class="ss-icon product-minus js-change-quantity" data-func="minus"><span class="icon-minus"></span></span>
      <input type="number" min="1" size="2" class="quantity" name="quantity" id="quantity" value="1" {% if settings.limit_quantity and variant.inventory_management != blank and variant.inventory_policy == "deny" %}max="{{ variant.inventory_quantity }}"{% endif %} />
      <span class="ss-icon product-plus js-change-quantity" data-func="plus"><span class="icon-plus"></span></span>
    </div>
    {% endif %}
  
  
  
  
  
 
  
  
  
  
  

  {% if section.settings.product_form_style == "swatches" and product.variants.size > 1 or section.settings.product_form_style == "swatches" and product.options[0] != "Title" %}
  <div class="swatch_options">
    {% for option in product.options %}
    {% include 'swatch' with option %}
    {% endfor %}
  </div>
  
  {% endif %}

  {% if product.available %}
  {% if settings.display_inventory_left %}
  <div class="items_left">
    {% if variant.inventory_management != blank and variant.inventory_quantity > 0 %}
    {% capture items_left_text %}
    {% if variant.inventory_quantity == 1 %}
    {{ 'products.product.items_left_count.one' | t }}
    {% else %}
    {{ 'products.product.items_left_count.other' | t }}
    {% endif %}
    {% endcapture %}
    {% if variant.inventory_quantity <= settings.inventory_threshold %}
    {{ variant.inventory_quantity }} {{ items_left_text }}
    {% endif %}
    {% endif %}
  </div>
  {% endif %}

  <div class="purchase-details">
    <div class="purchase-details__buttons purchase-details__spb--{{ show_payment_button }}">
      {% if settings.cart_action == 'reload_page' %}
      <input type="hidden" name="return_to" value="back" />
      {% elsif settings.cart_action == 'redirect_checkout' %}
      <input type="hidden" name="return_to" value="/checkout" />
      {% endif %}


      {% capture add_to_cart_label %}{% if collection_handles contains 'pre-order' %}{{ 'collections.general.pre_order' | t }}{% else %}{{ 'products.product.add_to_cart' | t }}{% endif %}{% endcapture %}
      <div class="purchase-add_n_subscribe">
        <a href="/pages/natural-soap-subscription" class="action_button add_to_cart  action_button--secondary ">
          {{ 'Subscribe & Save 25%' }}
        </a>
        <button type="submit" name="add" class="blaha action_button add_to_cart {% if show_payment_button %}{% endif %}" data-label={{ add_to_cart_label | json }}>
          <span class="text">{{ add_to_cart_label }}</span>
          <svg x="0px" y="0px" width="32px" height="32px" viewBox="0 0 32 32" class="checkmark">
            <path fill="none" stroke-width="2" stroke-linecap="square" stroke-miterlimit="10" d="M9,17l3.9,3.9c0.1,0.1,0.2,0.1,0.3,0L23,11"/>
          </svg>
        </button>
      </div>
      {%comment%}
      <script>
        //setTimeout(function(){ var hiddenOne = document.querySelector('.hidden-cart-btn');

        // hiddenOne.style.display = "block";  }, 3000);




      </script>

      <style>
        .hidden-cart-btn{display:block !important;}
        #customily-cart-btn {display:none !important;}
      </style>
      {%endcomment%}
      {% if show_payment_button %}
<!--       {{ form | payment_button }} -->
      {% endif %}
    </div>
  </div>
  {% endif %}
  {% endform %}
</div>
<style type="text/css">
  .rc_container_wrapper {
    display: none;
  }
</style>
<script type="text/javascript">
  jQuery(document).on("click", ".product-soap-v1 .swatch-element", function(){    
    $(".shopify-product-form .money, .shopify-product-form .current_price ").html(jQuery('select[name="id"]').find("option:selected").attr("data-variant-price"));
    var dataValue = $(this).data("value");
    jQuery('select[name="id"]').find("option").each(function(){
      var dataVariantTitle = jQuery(this).attr("data-variant-title");
      if(dataVariantTitle == dataValue){
        jQuery(this).prop("selected", true);
      }else{
        jQuery(this).prop("selected", false);
      }
    });
  });
</script>