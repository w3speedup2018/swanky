<div {% if section.settings.darken == true %}style="background-color:{{ section.settings.c1}};"{% endif %} class="ps_tets">
<div class="container">
  <div class="sixteen columns">
<!--[section desktop]-->
    <div class="rivis">
      <section class="slick-initialized slick-slider">
        {% for rivi in section.blocks  %}
        <div class="one-fifth  columns small-down" {% if forloop.index == 1 %}style="display:none;"{% endif %}>
          <div>
            <div class="nesps">
              {% if rivi.settings.darken_bg ==  true %} 
              <div class="testmops">
                {{ rivi.settings.testimonial }}
              </div>  
              {% else %}
              <img src="{{ rivi.settings.image | img_url: "master" }}" >
              {% endif %}
            </div>
          </div> 
        </div>
        {% endfor %}     
      </section>
    </div>
<!--[section desktop]-->
<!--[mobile section]-->
    <div class="moboleri"> 
      <section class="rivi mobileslider ps_testmo">
        {% for rivi in section.blocks  %}
        <div {% if forloop.index == 3 %}style="display:none;"{% endif %} >
          <div class="nesps">
            {% if rivi.settings.darken_bg ==  true %} 
            <div class="testmops">
              {{ rivi.settings.testimonial }}
            </div>  
            {% else %}
            <img src="{{ rivi.settings.image | img_url: "master" }}" >
            {% endif %}
          </div>
        </div>
        {% endfor %}
      </section>
    </div>
    <!--[mobile section]-->
  </div>
</div>
</div> 
