<div class="comman_pages_subscribe productsloop thee_forth"> 
  <div class="subscribenumber">
    <div class="container">
      <div data-step='1' class="cmn active"><span>1</span> <p>{{ section.settings.txt1}}</p></div>
      <div data-step='2' class="cmn active"><span>2</span> <p>{{ section.settings.txt2}}</p></div>
      <div data-step='3' class="cmn active"><span>3</span><p> {{ section.settings.txt3}}</p></div>
      <div data-step='4' class="cmn active"><span>4</span> <p>{{ section.settings.txt4}}</p></div>
    </div>
  </div>
  <div class="subscription_step_forth"> 
    <div class="container"> 
      <div class="loop_box_cmn">
        <div class="loop_box" data-step='4'>
          <h2>{{ section.settings.heading }}</h2>
          <p class="subtxt">{{ section.settings.content }}</p>
          <span class="saving_ship">{{ section.settings.ship }}</span>
          {% for block in section.blocks %}
          {% assign collection1 = collections[block.settings.collection] %}
          <div class="loop_collection slider_step_4"  data-id="{{ collection1.id }}">
            {% for product in collection1.products %}
            {%- comment %}<locksmith:7f44>{% endcomment -%}
              {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, subject_parent: collection1, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% else %}{% continue %}{% endif -%}
            {%- comment %}</locksmith:7f44>{% endcomment -%}
            {% assign selling_id =  '' %}
            {% for group in product.selling_plan_groups %}
            {% for selling_plan in group.selling_plans %}
            {% assign selling_id =  selling_plan.id %}
            {% endfor %}
            {% endfor %}
            <div class="forth_redirect">
              <a href="{{ product.url }}">
                <div class="forth_step_loop_again" selling_id="{{ selling_id }}" {% for variant in product.variants limit:1%}adtavar="{{variant.id}}"{% endfor%}>
                  <div class="forth_step_loop">
                    <div class="data">
                      <div class="data_inner">
                        {%- assign preview_image = product.featured_image  -%}
                        {% if product.images.size > 0 %} 
                        <div class="img_f">
                          <img src="{{preview_image | img_url:'master'}}">
                        </div>
                        {% endif %}
                        <h5> {{product.title}}</h5>
                         <span class="money">{{ product.price | money }}</span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="personalized-btn">PERSONALIZE NOW</div>
              </a>
            </div>
            {% endfor %}
          </div>
          {% endfor %}
        </div>
        <div class="subscriptionbtn"> 
          <div class="btn_step">
            <div class="page-width">
              <button class='btn prev'>Back</button>
              <button  class='btn next cart_redirect'>Next Step</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Subscription Step Forth",
    "settings": [
{
      "type": "text",
      "id": "txt1",
      "label":"Text"
},
{
      "type": "text",
      "id": "txt2",
      "label":"Text"
},
{
      "type": "text",
      "id": "txt3",
      "label":"Text"
},
{
      "type": "text",
      "id": "txt4",
      "label":"Text"
},
{
      "type": "text",
      "id": "heading",
      "label":"Heading"
},
{
      "type": "text",
      "id": "content",
      "label":"Content"
}
],
"blocks": [
    {
      "type": "box",
      "name": "box",
      "settings": [
    
   {
      "type": "collection",
      "id": "collection",
      "label":"Collection"
}

        
      ]
    }
  ]
  }
{% endschema %}

